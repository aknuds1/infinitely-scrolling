#!/usr/bin/env python
import subprocess
import json
import sys
import os
import subprocess


def _error(msg):
    sys.stderr.write('{}\n'.format(msg))
    sys.exit(1)


try:
    subprocess.check_call([
        './node_modules/.bin/webpack-dev-server', '-d', '--inline',
        '--content-base', 'public',
    ])
except subprocess.CalledProcessError:
    _error('Webpack dev server failed')
except KeyboardInterrupt:
    sys.exit(0)
